{
  "$schema": "https://biomejs.dev/schemas/2.0.5/schema.json",
  "assist": {
    "actions": {
      "source": {
        "useSortedKeys": "on"
      }
    },
    "enabled": true
  },
  "files": {
    "ignoreUnknown": false,
    "includes": [
      "examples/**",
      "openai-sdk/**",
      "packages/**",
      "guides/**",
      "!node_modules",
      "!**/node_modules",
      "!dist",
      "!**/dist",
      "!.wrangler",
      "!**/.wrangler",
      "!wrangler.jsonc",
      "!**/wrangler.jsonc",
      "!./tsconfig.base.json",
      "!**/tsconfig.base.json",
      "!**/normalize.css"
    ]
  },
  "formatter": {
    "enabled": false,
    "indentStyle": "tab"
  },
  "linter": {
    "enabled": true,
    "rules": {
      "a11y": {
        "useKeyWithClickEvents": "off"
      },
      "complexity": {
        "noBannedTypes": "off"
      },
      "recommended": true,
      "style": {
        "noNonNullAssertion": "off"
      }
    }
  },
  "vcs": {
    "clientKind": "git",
    "enabled": false,
    "useIgnoreFile": false
  }
}
