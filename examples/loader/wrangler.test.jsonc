{
  "$schema": "../../node_modules/wrangler/config-schema.json",
  "name": "loader-demos-test",
  // Use server-without-browser.ts for tests (no BrowserLoopback, avoids @cloudflare/playwright bundling issues)
  "main": "src/server-without-browser.ts",
  "compatibility_date": "2026-01-28",
  "compatibility_flags": ["nodejs_compat", "experimental"],
  "assets": {
    "directory": "public"
  },
  "durable_objects": {
    "bindings": [
      {
        "name": "Think",
        "class_name": "Think"
      }
    ]
  },
  "migrations": [
    {
      "tag": "v1",
      "new_sqlite_classes": ["Think"]
    }
  ],
  "observability": {
    "enabled": true
  },
  // Note: No browser binding for tests - it's not compatible with vitest-pool-workers
  "worker_loaders": [
    {
      "binding": "LOADER"
    }
  ]
}
