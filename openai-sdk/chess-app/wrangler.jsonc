{
  "name": "chess-app",
  "main": "src/index.ts",
  "compatibility_date": "2025-08-26",
  "compatibility_flags": ["nodejs_compat"],
  "durable_objects": {
    "bindings": [
      {
        "name": "CHESS",
        "class_name": "ChessGame"
      }
    ]
  },
  "migrations": [
    {
      "tag": "v1",
      "new_sqlite_classes": ["ChessGame"]
    }
  ],
  "assets": {
    "directory": "dist",
    "binding": "ASSETS"
  },
  "vars": {
    "HOST": "http://localhost:5174/" // replace with the hostname of your deployed worker
  }
}
