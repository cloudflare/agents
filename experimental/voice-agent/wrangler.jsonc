{
  "$schema": "../../node_modules/wrangler/config-schema.json",
  "name": "voice-agent",
  "compatibility_date": "2026-01-28",
  "compatibility_flags": ["nodejs_compat"],
  "main": "src/server.ts",
  // Hibernation is disabled for voice agents. The DO must stay alive during
  // active calls to preserve audio buffers and in-flight pipeline state.
  // See design/voice.md ยง Hibernation for details.
  "ai": {
    "binding": "AI"
  },
  "durable_objects": {
    "bindings": [
      {
        "class_name": "MyVoiceAgent",
        "name": "MyVoiceAgent"
      }
    ]
  },
  "migrations": [
    {
      "new_sqlite_classes": ["MyVoiceAgent"],
      "tag": "v1"
    }
  ],
  "assets": {
    "not_found_handling": "single-page-application"
  }
}
